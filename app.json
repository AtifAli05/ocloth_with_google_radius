{
  "expo": {
    "name": "Vyne",
    "slug": "Vyne",
    "version": "1.3.1",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "Assets/vyneBOW.png",
    "splash": {
      "image": "assets/vyneBOW.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vyne",
      "infoPlist": {
        "NSCameraUsageDescription": "The app requires access to the camera to allow you to take photos of your clothing items.",
        "NSUserNotificationUsageDescription": "This app would like to send you notifications."
      }
    },

    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "047e2f96-76c6-4b15-bf3e-51098b721f8b"
      }
    },
    "android": {
      "package": "com.vyne"
    }
  }
}
